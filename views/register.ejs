<%- include("partials/header") %>

<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register-->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark register-btn">Register</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card">
        <div class="card-body register">
          <a href="/auth/google" class="btn btn-block btn-social btn-google" role="button">
            <i class="fa-brands fa-google"></i> Register with Google 
          </a>
        </div>
      </div>
    </div>

  </div> 
</div>

<%- include("partials/footer") %>